<div class="container mt-4">
  <h2 class="mb-4"><%= client ? "✏️ Modifier" : "➕ Créer" %> un client</h2>

  <form method="POST" action="<%= client ? '/clients-ui/update/' + client.id : '/clients-ui/create' %>" class="card p-4 shadow-sm">
    <div class="mb-3">
      <label for="nom" class="form-label">Nom</label>
      <input type="text" id="nom" name="nom" class="form-control" value="<%= client ? client.nom : '' %>" required>
    </div>

    <div class="mb-3">
      <label for="email" class="form-label">Email</label>
      <input type="email" id="email" name="email" class="form-control" value="<%= client ? client.email : '' %>" required>
    </div>

    <div class="mb-3">
      <label for="telephone" class="form-label">Téléphone</label>
      <input type="text" id="telephone" name="telephone" class="form-control" value="<%= client ? client.telephone : '' %>" required>
    </div>

    <button type="submit" class="btn btn-success">
      <%= client ? "Mettre à jour" : "Enregistrer" %>
    </button>
    <a href="/clients-ui/vue" class="btn btn-secondary">⬅ Retour à la liste</a>
  </form>
</div>