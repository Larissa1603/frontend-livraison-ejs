<div class="container mt-4">
  <h2 class="mb-4">Liste des livraisons</h2>
  <a href="/livraisons-ui/new" class="btn btn-primary mb-3">➕ Ajouter une livraison</a>

  <% if (livraisons && livraisons.length > 0) { %>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Description</th>
          <th>Date de livraison</th>
          <th>Client</th>
          <th>Adresse</th>
          <th>Utilisateur</th>
          <th>Statut</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% livraisons.forEach(l => { %>
          <tr>
            <td><%= l.description %></td>
            <td><%= l.date_livraison %></td>

            <!-- ✅ Associations Sequelize -->
            <td><%= l.Client ? l.Client.nom : '' %></td>
            <td><%= l.Adresse ? (l.Adresse.rue + ', ' + l.Adresse.ville) : '' %></td>
            <td><%= l.Utilisateur ? l.Utilisateur.nom : '' %></td>
            <td><%= l.Statut ? l.Statut.nom : '' %></td>

            <td>
              <a href="/livraisons-ui/edit/<%= l.id %>" class="btn btn-sm btn-warning">Modifier</a>
              <a href="/livraisons-ui/delete/<%= l.id %>" class="btn btn-sm btn-danger">Supprimer</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <div class="alert alert-info">Aucune livraison trouvée.</div>
  <% } %>
</div>