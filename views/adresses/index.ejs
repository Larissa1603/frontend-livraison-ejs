<div class="container mt-4">
  <h2 class="mb-4">Liste des adresses</h2>
  <a href="/adresses-ui/new" class="btn btn-primary mb-3">➕ Ajouter une adresse</a>

  <% if (adresses && adresses.length > 0) { %>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Rue</th>
          <th>Ville</th>
          <th>Province</th>
          <th>Code postal</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% adresses.forEach(a => { %>
          <tr>
            <td><%= a.rue %></td>
            <td><%= a.ville %></td>
            <td><%= a.province %></td>
            <td><%= a.code_postal %></td>
            <td>
              <a href="/adresses-ui/edit/<%= a.id %>" class="btn btn-sm btn-warning">Modifier</a>
              <a href="/adresses-ui/delete/<%= a.id %>" class="btn btn-sm btn-danger">Supprimer</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <div class="alert alert-info">Aucune adresse trouvée.</div>
  <% } %>
</div>