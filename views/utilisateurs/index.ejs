<div class="container mt-4">
  <h2 class="mb-4">Liste des utilisateurs</h2>
  <a href="/utilisateurs-ui/new" class="btn btn-primary mb-3">➕ Ajouter un utilisateur</a>

  <% if (utilisateurs && utilisateurs.length > 0) { %>
    <table class="table table-striped table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Nom</th>
          <th>Email</th>
          <th>Rôle</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% utilisateurs.forEach(u => { %>
          <tr>
            <td><%= u.nom %></td>
            <td><%= u.email %></td>
            <td><%= u.role_id %></td>
            <td>
              <a href="/utilisateurs-ui/edit/<%= u.id %>" class="btn btn-sm btn-warning">Modifier</a>
              <a href="/utilisateurs-ui/delete/<%= u.id %>" class="btn btn-sm btn-danger">Supprimer</a>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <div class="alert alert-info">Aucun utilisateur trouvé.</div>
  <% } %>
</div>